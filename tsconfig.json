{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}

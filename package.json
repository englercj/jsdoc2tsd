{
  "name": "tsd-jsdoc",
  "version": "2.3.0",
  "description": "Compiles JSDoc annotated javascript into a Typescript Declaration File (.d.ts).",
  "main": "dist/publish.js",
  "author": "Chad Engler <chad@pantherdev.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:englercj/jsdoc2tsd.git"
  },
  "scripts": {
    "checkFormat": "prettier --list-different '**/*.{js,jsx,ts,tsx,html,vue,css,less,scss,graphql,yaml,yml,json,md,mdx}' ",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,html,vue,css,less,scss,graphql,yaml,yml,json,md,mdx}' ",
    "lint": "eslint --ext .js,.ts .",
    "fix": "eslint --fix --ext .js,.ts .",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "prepare": "npm run build",
    "test": "mocha --ui tdd -r ts-node/register test/specs/**.ts"
  },
  "files": [
    "dist/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "chai": "^4.2.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jsdoc": "^3.5.5",
    "jsdoc-api": "^4.0.3",
    "lint-staged": "^9.0.2",
    "mocha": "^5.2.0",
    "prettier": "^1.18.2",
    "ts-node": "^7.0.1"
  },
  "peerDependencies": {
    "jsdoc": "^3.5.5"
  },
  "dependencies": {
    "typescript": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --list-different",
      "eslint --ext .js,.ts"
    ],
    "*.{jsx,tsx,html,vue,css,less,scss,graphql,yaml,yml,json,md,mdx}": [
      "prettier --list-different"
    ]
  }
}
